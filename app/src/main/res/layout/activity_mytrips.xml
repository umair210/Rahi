<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mytrips">

    <TextView
        android:id="@+id/name_mytrip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:padding="20dp"
        android:layout_marginTop="20dp"
        android:text="Enter NAME"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textColor="@android:color/black"
        android:background="@drawable/inputs"
        />
    <TextView
        android:id="@+id/my_trip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name_mytrip"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:padding="20dp"
        android:layout_marginTop="20dp"
        android:text="Create trip"
        android:textSize="20dp"
        android:textColor="@android:color/black"
        />
    <TextView
        android:id="@+id/createdtrips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:padding="20dp"
        android:layout_marginTop="20dp"
        android:text="Created Trips"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textColor="@android:color/black"
        android:background="@drawable/inputs"
        android:layout_below="@+id/my_trip"
        />

    <TextView
        android:id="@+id/completed_trips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:padding="20dp"
        android:layout_marginTop="20dp"
        android:text="Completed trips"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textColor="@android:color/black"
        android:background="@drawable/inputs"
        android:layout_below="@+id/createdtrips"
        />

</RelativeLayout>