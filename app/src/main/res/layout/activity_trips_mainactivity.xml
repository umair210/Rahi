<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Trips_mainactivity">

    <TextView
        android:id="@+id/username_trip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:padding="20dp"
        android:layout_marginTop="20dp"
        android:text="Enter NAME"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textColor="@android:color/black"
        android:background="@drawable/inputs"
        />
    <TextView
        android:id="@+id/trip_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/username_trip"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:padding="20dp"
        android:layout_marginTop="20dp"
        android:text="Create trip"
        android:textSize="20dp"
        android:textColor="@android:color/black"
        />
    <TextView
        android:id="@+id/trip_createtrip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:padding="20dp"
        android:layout_marginTop="20dp"
        android:text="Create Trip"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textColor="@android:color/black"
        android:background="@drawable/inputs"
        android:layout_below="@+id/trip_title"
        />
    <TextView
        android:id="@+id/trip_mytrip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:padding="20dp"
        android:layout_marginTop="20dp"
        android:text="My Trips"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textColor="@android:color/black"
        android:background="@drawable/inputs"
        android:layout_below="@+id/trip_createtrip"
        />
    <TextView
        android:id="@+id/trip_savedtrip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:padding="20dp"
        android:layout_marginTop="20dp"
        android:text="Saved Trips"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textColor="@android:color/black"
        android:background="@drawable/inputs"
        android:layout_below="@+id/trip_mytrip"
        />
    <TextView
        android:id="@+id/trip_bookedtrip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:padding="20dp"
        android:layout_marginTop="20dp"
        android:text="Booked Trips"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textColor="@android:color/black"
        android:background="@drawable/inputs"
        android:layout_below="@id/trip_savedtrip"
        />




</RelativeLayout>